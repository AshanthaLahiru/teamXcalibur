<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <welcome-file-list>
        <welcome-file>Login</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>SignIn</servlet-name>
        <servlet-class>org.sampath.filex.web.actions.SignIn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileControll</servlet-name>
        <servlet-class>org.sampath.filex.web.actions.FileControll</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetFile</servlet-name>
        <servlet-class>org.sampath.filex.web.actions.GetFile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SetComment</servlet-name>
        <servlet-class>org.sampath.filex.web.actions.SetComment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetComment</servlet-name>
        <servlet-class>org.sampath.filex.web.actions.GetComment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Intermediate</servlet-name>
        <servlet-class>org.sampath.filex.web.actions.Intermediate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProjectControl</servlet-name>
        <servlet-class>org.sampath.filex.web.actions.ProjectControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>org.sampath.filex.web.actions.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Constants</servlet-name>
        <servlet-class>org.sampath.filex.web.actions.Constants</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignIn</servlet-name>
        <url-pattern>/SignIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileControll</servlet-name>
        <url-pattern>/FileControll</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetFile</servlet-name>
        <url-pattern>/GetFile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SetComment</servlet-name>
        <url-pattern>/SetComment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetComment</servlet-name>
        <url-pattern>/GetComment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Intermediate</servlet-name>
        <url-pattern>/Intermediate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProjectControl</servlet-name>
        <url-pattern>/ProjectControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Constants</servlet-name>
        <url-pattern>/Constants</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
